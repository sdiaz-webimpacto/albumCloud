{% extends 'base.html.twig' %}

{% block title %}PhotoAlbums Home{% endblock %}
{% block description %}Crea, modifica y visualiza tus albumes de fotos desde cualquier sitio y dispositivo.{% endblock %}
{% block keywords %}fotos, album, visualiza, crea tus fotos, fotos en cualquier parte del mundo{% endblock %}

{% block body %}
<div id="home" class="container-fluid mt-5 mb-5">
    <div class="container">
        <div class="row">
            <h2 class="sectionTitle">Tus últimas fotos añadidas</h2>
                <div class="slider-home">
                    {% for photo in photos %}
                        <div class="sliderContainer">
                            <div style="background-image: url('{{ asset('img/user/') }}{{ photo.getPhotoPath() }}');">
                                <p>{{ photo.getName() }}</p>
                            </div>
                        </div>
                    {% endfor %}
                </div>
        </div>
        <div class="row">
            <h2 class="sectionTitle">Todos tus albumes</h2>
            <div class="allMyAlbums">
                {% include "my_account/albumes.html.twig" %}
            </div>
        </div>
    </div>
</div>
{% endblock %}
